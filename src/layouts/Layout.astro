---
// src/layouts/Layout.astro
const { title } = Astro.props;
import "../styles/global.css";
import Header from "../components/Header.astro"; // Optional nếu bạn dùng Header chung
---
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Font Inter -->
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  </head>

  <body class="bg-white text-black font-sans">
    <Header /> <!-- Nếu bạn muốn header ở tất cả các trang -->
    
    <main class="px-4 py-8 max-w-4xl mx-auto">
      <slot /> <!-- Nội dung riêng của từng trang sẽ được "gắn" vào đây -->
    </main>
  </body>
</html>
